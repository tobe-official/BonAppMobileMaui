<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BonAppMobileMaui.screens.HomePage"
             Title="Home">
    <Grid>
        <ScrollView>
            <StackLayout>
                <!-- Toggle Button -->
                <Button Text="Food Court / Following"
                        Command="{Binding ToggleCommand}"
                        HorizontalOptions="CenterAndExpand"
                        Margin="10" BackgroundColor="#123456" TextColor="White"/>
                
                <!-- Meal Cards Stack Container -->
                <StackLayout x:Name="MealCardContainer"
                             VerticalOptions="FillAndExpand"
                             Spacing="0" /> 
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>