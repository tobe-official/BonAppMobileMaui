<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BonAppMobileMaui.Views.MealListProfileFavorite">

    <CollectionView x:Name="MealCollectionView"
                    ItemsLayout="VerticalGrid, 3"
                    VerticalScrollBarVisibility="Never">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Padding="0" CornerRadius="0" HeightRequest="100" WidthRequest="100">
                    <StackLayout>
                        <Image Source="{Binding ImageUrl}" HeightRequest="100" WidthRequest="100" />
                        <Label Text="{Binding Name}" HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>